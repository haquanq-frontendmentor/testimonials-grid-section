{
  "name": "fm-testimonials-grid-section",
  "description": "Solution for frontendmentor.io challenge: testimonials-grid-section",
  "devDependencies": {
    "@playwright/test": "^1.44.1",
    "@types/node": "^20.12.12",
    "autoprefixer": "^10.4.19",
    "browser-sync": "^3.0.2",
    "copyfiles": "^2.4.1",
    "cssnano": "^7.0.1",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0"
  },
  "scripts": {
    "dev": "browser-sync start -s src -f src --no-ui",
